<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:showIn="@layout/activity_game_emulator"
    tools:context="com.steelcomputers.android.assignmenttwo.GameEmulatorFragment">

    <Button
        android:id="@+id/player_one_wins"
        android:text="@string/game_emulator_player_wins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/player_two_wins"
        android:text="@string/game_emulator_player_wins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/draw"
        android:text="@string/game_emulator_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
